        </div>

        <dl class="form-group">
            <dt>
                @Html.LabelFor(model => model.MaKH, htmlAttributes: new { @class = "control-label col-md-2" })
            </dt>
            <dd class="col-md-10">
                @Html.TextBoxFor(model => model.KhachHang.HoTen, new { style = "width: 206px; background:#EEEEEE; margin-left:5px;", disabled = "disabled" })
                @*<span style="font-size:15px; margin-top:2px; margin-left: 5px">@Model.KhachHang.HoTen</span>*@
                @Html.Hidden("MaKH", Model.MaKH)
            </dd>
        </dl>

        <dl class="form-group">
            <dt>
                @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2" })
            </dt>
            <dd class="col-md-10">
                @Html.TextBoxFor(model => model.DiaChi, new { style = "width: 206px; background:#EEEEEE; margin-left:5px;", disabled = "disabled" })
                @*<span style="font-size:15px; margin-top:2px; margin-left: 5px">@Model.DiaChi</span>*@
                @Html.Hidden("DiaChi", Model.DiaChi)
            </dd>
        </dl>

        <dl class="form-group">
            <dt>
                @Html.LabelFor(model => model.DienThoai, htmlAttributes: new { @class = "control-label col-md-2" })
            </dt>
            <dd class="col-md-10">
                @Html.TextBoxFor(model => model.DienThoai, new { style = "width: 206px; background:#EEEEEE; margin-left:5px;", disabled = "disabled" })
                @*<span style="font-size:15px; margin-top:2px; margin-left: 5px">@Model.DienThoai</span>*@
                @Html.Hidden("DienThoai", Model.DienThoai)
            </dd>
        </dl>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
