                @Html.LabelFor(model => model.NgayDat, htmlAttributes: new { @class = "control-label col-md-2" })
            </dt>
            <dd class="col-md-10">
                @Html.TextBoxFor(model => model.NgayDat, new { style = "width: 206px; background:#EEEEEE; margin-left:5px;", disabled = "disabled" })
                @*<span style="font-size:15px; margin-top:2px; margin-left: 5px">@Model.NgayDat</span>*@
                @Html.Hidden("NgayDat", Model.NgayDat)
            </dd>
        </dl>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayGiao, htmlAttributes: new { @class = "control-label col-md-2" })
