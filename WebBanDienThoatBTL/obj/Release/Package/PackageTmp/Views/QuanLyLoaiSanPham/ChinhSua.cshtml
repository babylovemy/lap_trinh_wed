@model WebBanDienThoatBTL.Models.LoaiDienThoai

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div>
    <i class="fa fa-arrow-left" aria-hidden="true"></i> &nbsp;@Html.ActionLink("Quay Lại", "Index")
</div>
<h2>Chỉnh Sửa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <dl class="form-group">
            <dt>
                @Html.LabelFor(model => model.MaLDT, htmlAttributes: new { @class = "control-label col-md-2" })
            </dt>
            <dd>
                @Html.TextBoxFor(model => model.MaLDT, new { style = "width: 206px; background:#EEEEEE; margin-left:5px;", disabled = "disabled" })
                @Html.Hidden("MaLDT", Model.MaLDT)
            </dd>
        </dl>

        <div class="form-group" style="">
            @Html.LabelFor(model => model.TenLDT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLDT, new { htmlAttributes = new { style = "width: 206px; background:#FFF; margin-left:5px;" } })
                @Html.ValidationMessageFor(model => model.TenLDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-top:15px">
            <div class="col-md-offset-2 col-md-10" style="margin-left: 35px;">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}


