        <div style="text-align: center;">
            <input type="submit" id="btnSubmit" name="btnSubmit" value="Đăng Nhập" style="background-color:#006bff; width:80px; height:30px; border:1px solid aqua; font-family: 'Times New Roman'; color: #ffffff;" />
        </div>
    </div>
}
