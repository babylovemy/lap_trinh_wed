@model WebBanDienThoatBTL.Models.Admin

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Admin/AdminT.cshtml";
}
<div style="text-align: center;">
    <h2>Đăng Nhập</h2>
</div>

@using (Html.BeginForm())
{
    <div id="divDN">
        <span style="margin-left: 10px; float: left;">Tài Khoản</span>
