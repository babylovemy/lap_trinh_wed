<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/font-awesome-4.2.0/css/font-awesome.min.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('../../HinhAnh/bgr.jpg');
        }
        #formDN{
            border: 4px solid #c8c8c8;
            width: 265px;
            height: 200px;
            background: rgba(221, 220, 220, 0.88);
            position: absolute;
            transform: translateX(-50%) translateY(-50%);
            -webkit-transform: translateX(-50%) translateY(-50%);
            left:50%;
            top: 50%;
        }
    </style>
</head>
<body>
    <div id="formDN">
        <a href="@Url.Action("Index","Home")">
            <i class="fa fa-home" aria-hidden="true" style="float: right; margin-right:10px; margin-top:10px;"></i><br />
        </a>
        @RenderBody()
    </div>
</body>
</html>
